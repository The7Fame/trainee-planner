<div class="container p-4">
  <div class="row d-flex justify-content-center align-items-center">
    <div class="card col-4 p-4 edit-password">
      <div class="card-body p-4 text-center">
        <h2><%= t('devise.change_password') %></h2>
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
          <%= f.hidden_field :reset_password_token %>
          <%= render partial: "users/shared/error_messages", locals: { user: resource, attribute: :password } %>
          <div class="field">
            <%= f.password_field :password, class: 'form-control', 
                autofocus: true, autocomplete: "new-password", placeholder: t('user.email') %>
          </div>
          <%= render partial: "users/shared/error_messages", 
              locals: { user: resource, attribute: :password_confirmation } %>
          <div class="field">
            <%= f.password_field :password_confirmation, class: 'form-control', 
                autocomplete: "new-password", placeholder: t('user.password') %>
          </div>
          <div class="actions">
            <%= f.submit t('devise.change_btn'), class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
