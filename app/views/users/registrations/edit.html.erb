<div class="container p-4 min-vh-100">
  <div class="row d-flex justify-content-center align-items-center">
    <div class="col-4 ">
      <div class="card edit-page">
        <div class="card-body p-8 text-center">
          <h2><%= t('user.edit_profile') %></h2>
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
            <%= render partial: "users/shared/error_messages", locals: { user: resource, attribute: :first_name } %>
            <div class="field">
              <%= f.text_field :first_name , class: "form-control", placeholder: t('user.first_name'), autofocus: true %>
            </div>
            <div class="field">
              <%= f.text_field :last_name, class: "form-control", placeholder: t('user.last_name'), autofocus: true %>
            </div>
            <%= render partial: "users/shared/error_messages", locals: { user: resource, attribute: :email } %>
            <div class="field">
              <%= f.email_field :email, class: 'form-control', autofocus: true, 
                  autocomplete: "email", placeholder: t('user.email') %>
            </div>
            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
            <% end %>
            <%= render partial: "users/shared/error_messages", locals: { user: resource, attribute: :password } %>
            <div class="field">
              <%= f.password_field :password, class: 'form-control', 
                  autocomplete: "new-password", placeholder: t('user.password') %>
            </div>
            <%= render partial: "users/shared/error_messages", 
                locals: { user: resource, attribute: :password_confirmation } %>
            <div class="field">
              <%= f.password_field :password_confirmation, class: 'form-control', 
                  autocomplete: "new-password", placeholder: t('user.confirm_password') %>
            </div>
            <%= render partial: "users/shared/error_messages", 
                locals: { user: resource, attribute: :current_password } %>
            <div class="field">
              <%= f.password_field :current_password, class: 'form-control', 
                  autocomplete: "current-password", placeholder: t('user.current_password') %>
            </div>
            <div class="actions">
              <%= f.submit t('user.update'),  class: "btn btn-primary" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
