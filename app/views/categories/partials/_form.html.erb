<%= form_with model: category do |f| %>
  <%= render partial: 'layouts/error', locals: { model: category, attribute: :name } %>
  <div class="mb-4">
    <%= f.text_field :name, class: "form-control name-cat", placeholder: "Name" %>
  </div>
  <p><%= f.submit 'Create', class: "btn btn-primary" %></p>
<% end %>
